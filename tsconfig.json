{
  "compilerOptions": {
    "target": "es6",
    "module":"CommonJS",
    "lib": ["es2015", "es2016", "es2017"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true
  },
  "all": true,
  "exclude": [ "node_modules", "dist" ]
}
